<resources>

    <!-- Base application theme. 原来主题Theme.AppCompat.Light.DarkActionBar -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="wrap" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--首页底部文本框风格-->
    <style name="MainMenuText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--首页按钮的风格-->
    <style name="main_menu_button" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@drawable/big_button</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--填写名字页面风格-->
    <style name="PlayerNameFill">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>

        <item name="android:textSize">20sp</item>
    </style>


    <!--填写名字页面按钮的风格-->
    <style name="small_button" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/small_button</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MainViewTimer">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">24dip</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:textSize">16dip</item>
    </style>

    <style name="MainViewStar">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:src">@drawable/small_star2</item>
    </style>

    <style name="MainViewStar2" parent="MainViewStar"> </style>

</resources>
